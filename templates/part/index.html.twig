{% extends 'base.html.twig' %}

{% block title %}Bike Part Inventory{% endblock %}

{% block body %}
    <div class="row mx-5">
        <div class="col">
            <h1 class="h4 text-gray-900 pt-2">Parts in Stock</h1>
        </div>
        <div class="col text-end pe-0">
            <a class="btn btn-primary px-3 shadow-sm mb-3" href="{{ path('app_part_new') }}">New Part <i class="fa fa-plus-circle"></i></a>
        </div>
    </div>
    <div class="list-group mx-5 mb-5">
        {% for part in parts %}
            <div class="list-group-item list-group-item-action py-3" aria-current="true">
                <div class="row g-0">
                    <div class="col-md-1 text-center">
                        <div class="icon-preview">
                            <i class="fas fa-fw fa-wrench"></i>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="d-flex w-100 justify-content-between mt-3">
                            <h6 class="mb-1">{{ part.name }}
                                {% if part.color %}
                                    ({{ part.color }})
                                {% endif %}

                                {% if part.size %}
                                    {{ part.size }}
                                {% endif %}
                            </h6>
                        </div>
                    </div>
                    <div class="col-md-3 text-end">
                        <div>
                            <h5 class="text-danger">${{ part.price }}</h5>
                        </div>
                        <a class="btn btn-warning shadow-sm"
                           href="{{ path('app_part_show', {'id': part.id}) }}"><i class="fas fa-fw fa-search"></i> View</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
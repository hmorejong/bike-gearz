{% extends 'base.html.twig' %}

{% block title %}Bicycle index{% endblock %}

{% block body %}
    <h1>Bicycle index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Brand</th>
                <th>Model</th>
                <th>Color</th>
                <th>Price</th>
                <th>Description</th>
                <th>Category</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bicycle in bicycles %}
            <tr>
                <td>{{ bicycle.id }}</td>
                <td>{{ bicycle.brand }}</td>
                <td>{{ bicycle.model }}</td>
                <td>{{ bicycle.color }}</td>
                <td>{{ bicycle.price }}</td>
                <td>{{ bicycle.description }}</td>
                <td>{{ bicycle.category }}</td>
                <td>
                    <a href="{{ path('app_bicycle_show', {'id': bicycle.id}) }}">show</a>
                    <a href="{{ path('app_bicycle_edit', {'id': bicycle.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_bicycle_new') }}">Create new</a>
{% endblock %}
